formulas:
  Campaign: file(link(file.folder.split("/").slice(0, -1).join("/") + "/‚≠ê " + file.folder.split("/").slice(-2, -1)))
  Active status: formula.Campaign.properties.Status
  Relation: link()
properties:
  file.name:
    displayName: Name
  formula.Campaign:
    displayName: Campaign
views:
  - type: cards
    name: My Characters
    filters:
      and:
        - file.inFolder("10 - Player Campaigns")
        - isMe == true
        - or:
            - formula["Active status"] == "üü¢ Active"
            - formula["Active status"] == "üü° Inactive"
    order:
      - file.name
      - Class
      - formula.Campaign
    sort:
      - property: formula.Active status
        direction: DESC
    image: note.portrait
  - type: table
    name: Campaign List
    filters:
      and:
        - file.name.contains("‚≠ê")
        - or:
            - file.inFolder("10 - Player Campaigns")
            - file.inFolder("11 - Archived Player Campaigns")
    groupBy:
      property: Status
      direction: DESC
    order:
      - file.name
      - Latest Session
      - System
    sort:
      - property: file.mtime
        direction: DESC
      - property: file.name
        direction: ASC
    columnSize:
      file.name: 200
